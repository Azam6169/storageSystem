{% extends "master.html.twig" %}


{% block title %}Login{% endblock %}

{% block content %}


    <form method="post" id="registerForm">
        <div class="container">
            <label><b>E-mail</b></label>
            <input type="email" placeholder="Enter email" name="email" required>

            <label><b>Password</b></label>
            <input type="password" placeholder="Enter Password" name="pass" required>

            <input type="submit" value="Login" style="height:50px;width:80px" >


            <button type="button" value="cancelbtn" style="height:50px;width:80px">Cancel</button>
        </div>
        <span class="registerNow">New account?<a href="/register">Register!!</a></span><br>
        <span class="ressetpass">I forget my password<a href="http://localhost:8181/passreset/request">Resset My password</a></span>

    </form>



{% endblock %} 


