{#{% extends "master.html.twig" %}#}
{% block title %}Files list View{% endblock %}
{% block content %}
    <p><a href="/share/add">View Files</a><p>
    <table border=1>
        <tr><th>#</th><th>File Name</th><th>Unique Name</th><th>Action</th></tr>
        {% for p in list %}
                <tr class="{% if loop.index is odd %}rowodd{% else %}roweven{% endif %}">
                    <td>{{p.id}}</td>                                       
                    <td>{{p.filename}}</td>
                    <td>{{p.secretdir}}</td>
                    <td>
                        <a href="/file/delete/{{p.id}}">Delete</a>
                        <a href="/file/edit/{{p.id}}">Edit</a>
                        <a href="/file/edit/{{p.id}}">Edit</a> 
                        
                    </td>
                </tr>
        {% else %}
            <tr><td colspan="6"> You have no files</td></tr>
        {% endfor %}
    </table>         
        
{% endblock %}